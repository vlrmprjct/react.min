{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2017"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "noEmit": false,
        "sourceMap": true,
        "declaration": false,
        "declarationMap": false,
        "rootDir": "src",
    },
    "include": [
        "src/**/*"
    ]
}
